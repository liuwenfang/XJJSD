<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:textSize="16dp"
            android:textColor="#2f2f2f"
            android:text="党志鹏" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_name"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:textSize="16dp"
            android:textColor="#2f2f2f"
            android:text="18756907933" />

        <TextView
            android:id="@+id/tv_defaultAddr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:textSize="16dp"
            android:textColor="@color/common_btn_bg"
            android:text="@string/addr_default_address" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp"
            android:textSize="16dp"
            android:textColor="#878787"
            android:text="安徽省阜阳市阜南县1703 236300" />

    </LinearLayout>
    <include layout="@layout/divide_1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_isDefault"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="8dp"
            android:textSize="16dp"
            android:textColor="#878787"
            android:drawableLeft="@mipmap/bg_adress"
            android:drawablePadding="10dp"
            android:text="@string/addr_set_addr"
            android:background="@color/clear_color"/>

        <Button
            android:id="@+id/btn_edit"
            android:paddingLeft="10dp"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@+id/btn_delete"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:textSize="16dp"
            android:textColor="#2f2f2f"
            android:text="@string/design_edit"
            android:drawableLeft="@mipmap/icon_xie"
            android:background="@drawable/common_btn_style"/>

        <Button
            android:id="@+id/btn_delete"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:textSize="16dp"
            android:textColor="#2f2f2f"
            android:drawableLeft="@mipmap/icon_delete"
            android:text="@string/design_delete"
            android:background="@drawable/common_btn_style"/>

    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#fafafa"
        >

    </LinearLayout>

</LinearLayout>
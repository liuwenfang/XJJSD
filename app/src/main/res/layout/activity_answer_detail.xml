<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <include layout="@layout/divide_15_top_bottom"></include>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginTop="10dp"
                android:textSize="15dp"
                android:text="标题"
                android:textColor="#505050" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:layout_alignLeft="@+id/title"
                android:textSize="10dp"
                android:text="提问时间:"
                android:layout_marginTop="5dp"
                android:textColor="#B9B9B9" />

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:layout_alignLeft="@+id/title"
                android:textSize="12dp"
                android:text="2312"
                android:layout_marginTop="5dp"
                android:textColor="#828282"
                android:layout_marginBottom="10dp"/>
        <include layout="@layout/divide_1" ></include>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/replyWrapper"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"
                    android:text="管理员回复"
                    android:id="@+id/leftReply"
                    android:textColor="#505050" />

                <TextView
                    android:id="@+id/replyTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:layout_alignParentRight="true"
                    android:textSize="10dp"
                    android:text="提问时间:"
                    android:layout_marginTop="13dp"
                    android:textColor="#B9B9B9" />

                <TextView
                    android:id="@+id/replyContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:layout_below="@+id/leftReply"
                    android:textSize="12dp"
                    android:text="2312"
                    android:layout_marginTop="5dp"
                    android:textColor="#828282"
                    android:layout_marginBottom="10dp"/>
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>

</ScrollView>
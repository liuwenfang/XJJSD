<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/back_wrapper"
    android:background="@color/diy_back_tran_color"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:background="@color/white"
        android:alpha="1"
        android:layout_marginBottom="0sp"
        android:clickable="true"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_height="@dimen/diy_bottom_height">
        <RadioGroup
            android:id="@+id/group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="4dp">  
            <RadioButton
                android:id="@+id/kuanshi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:gravity="center_horizontal"
                android:paddingTop="5dp"
                android:drawablePadding="5dp"
                android:textColor="@color/diy_bottom_color"
                android:textSize="12sp" />  
            <RadioButton
                android:id="@+id/gallery"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:button="@null"
                android:gravity="center_horizontal"
                android:paddingTop="5dp"
                android:drawableTop="@mipmap/icon_menu_img"
                android:text="@string/gallery"
                android:textColor="@color/diy_bottom_color"
                android:textSize="12sp" />  
            <RadioButton
                android:id="@+id/camera"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawablePadding="5dp"
                android:paddingTop="5dp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center_horizontal"
                android:drawableTop="@mipmap/icon_menu_upload"
                android:text="@string/camera"
                android:textColor="@color/diy_bottom_color"
                android:textSize="12sp" /> 

            <RadioButton
                android:id="@+id/pc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawablePadding="5dp"
                android:paddingTop="5dp"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center_horizontal"
                android:drawableTop="@mipmap/icon_menu_pc"
                android:text="@string/pc"
                android:textColor="@color/diy_bottom_color"
                android:textSize="12sp" /> 

            <RadioButton
                android:id="@+id/tuya"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="5dp"
                android:layout_weight="1"
                android:button="@null"
                android:drawablePadding="5dp"
                android:gravity="center_horizontal"
                android:textColor="@color/diy_bottom_color"
                android:textSize="12sp" /> 
        </RadioGroup> 
    </LinearLayout>
</RelativeLayout>
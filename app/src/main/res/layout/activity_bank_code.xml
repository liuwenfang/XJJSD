<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ahxbapp.xjjsd.activity.BankCodeActivity">

    <include layout="@layout/tool_bar_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp">

        <TextView
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="手机号"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editPhone"
            android:layout_width="0dp"
            android:text="18788899978"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入此卡的预留手机号"
            android:imeOptions="actionUnspecified"
            android:inputType="number"
            android:textColor="@color/common_login_text"
            android:textColorHint="@color/common_login_text_hit"
            android:textCursorDrawable="@null"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="22dp"
        android:background="@color/divide_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="验证码"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editCode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入验证码"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/common_login_text"
            android:textColorHint="@color/common_login_text_hit"
            android:textCursorDrawable="@null"
            android:textSize="16sp" />

        <View
            android:layout_width="0.7dp"
            android:layout_height="15dp"
            android:layout_marginTop="4dp"
            android:background="@color/divide_line" />

        <com.ahxbapp.common.widget.ValidePhoneView
            android:id="@+id/sendCode"
            style="@style/ValidePhoneView"
            android:textColor="@color/nav_blue" />
    </LinearLayout>

</LinearLayout>

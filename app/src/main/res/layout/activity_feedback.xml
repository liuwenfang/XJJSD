<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机:"
            android:textColor="#787878"
            android:id="@+id/phoneLeft"
            android:layout_alignTop="@+id/et_phone"
            android:layout_marginTop="10dp"
            android:textSize="14sp" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_marginLeft="8dp"
            android:id="@+id/et_phone"
            android:layout_toRightOf="@+id/phoneLeft"
            android:background="@drawable/shape_border_edit_bg"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q  Q:"
            android:textColor="#787878"
            android:id="@+id/QQLeft"
            android:layout_alignTop="@+id/et_QQ"
            android:layout_marginTop="10dp"
            android:textSize="14sp" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/et_phone"
            android:layout_marginTop="8dp"
            android:id="@+id/et_QQ"
            android:layout_toRightOf="@+id/QQLeft"
            android:background="@drawable/shape_border_edit_bg"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="内容:"
            android:textColor="#787878"
            android:id="@+id/contentLeft"
            android:layout_alignTop="@+id/et_content"
            android:layout_marginTop="10dp"
            android:textSize="14sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/et_QQ"
            android:layout_marginTop="8dp"
            android:id="@+id/et_content"
            android:inputType="textMultiLine"
             android:gravity="left|top"
            android:layout_toRightOf="@+id/contentLeft"
            android:background="@drawable/shape_border_edit_bg"
            />

        <Button
            android:id="@+id/subBtn"
            style="?android:textAppearanceButton"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_below="@+id/et_content"
            android:layout_marginTop="8dp"
            android:layout_alignLeft="@+id/et_content"
            android:background="@drawable/selector_common_light_rectangle"
            android:text="提交"
            android:textColor="@drawable/font_login_button"
            android:textSize="16sp"/>

    </RelativeLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/all_bg"
    tools:context="com.ahxbapp.xjjsd.activity.FirstCerActivity">

    <include
        android:id="@+id/include"
        layout="@layout/tool_bar_title" />

    <LinearLayout xmlns:custom="http://schemas.android.com/apk/res/com.ahxbapp.xjjsd"
        android:id="@+id/baseCerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include"
        android:layout_toEndOf="@+id/lin_area"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="visible">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:background="@color/divide_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="姓  名"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/editName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入您的真实姓名"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/common_login_text"
                android:textColorHint="@color/common_login_text_hit"
                android:textCursorDrawable="@null"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/divide_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="身份证"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/editsfz"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:hint="请输入您的身份证号"
                android:imeOptions="actionUnspecified"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/common_login_text"
                android:textColorHint="@color/common_login_text_hit"
                android:textCursorDrawable="@null"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/divide_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="银行卡"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/editbank"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:hint="请输入您常用的银行卡号"
                android:imeOptions="actionUnspecified"
                android:inputType="number"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/common_login_text"
                android:textColorHint="@color/common_login_text_hit"
                android:textCursorDrawable="@null"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/divide_line" />

        <RelativeLayout
            android:id="@+id/mJobRL"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/mToolbar"
            android:layout_marginTop="10dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/education"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="职业"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/mJobTV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/education"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:textColor="@color/font_grey2"
                android:textSize="15sp" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:paddingRight="10dp"
                android:src="@mipmap/down" />

        </RelativeLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/mJobRL"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/divide_line"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/mInComeRL"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/view1"
            android:layout_marginTop="10dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/income"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="月收入"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/mIncomeTV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/income"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:textColor="@color/font_grey2"
                android:textSize="15sp" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:paddingRight="10dp"
                android:src="@mipmap/down" />

        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/mSubmitBN"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/baseCerLayout"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_submit"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tvFirstPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mSubmitBN"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/lin_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:id="@+id/mView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#66000000"
            android:clickable="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_cancel"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="取消"
                    android:textColor="@color/nav_blue"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_ok"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:paddingRight="15dp"
                    android:text="确定"
                    android:textColor="@color/nav_blue"
                    android:textSize="14sp" />
            </LinearLayout>

            <com.ahxbapp.xjjsd.wheel.WheelView
                android:id="@+id/wheel_job"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

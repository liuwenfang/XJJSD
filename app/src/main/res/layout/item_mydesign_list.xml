<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bounds_style">

            <ImageView
                android:id="@+id/img_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginLeft="15dp">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="套头圆领卫衣"
                android:textSize="16dp"
                android:textColor="@color/common_title_color"/>
            <TextView
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-08-27"
                android:layout_marginTop="10dp"
                android:textColor="@color/common_detail_color"/>

        </LinearLayout>

    </LinearLayout>
    <include layout="@layout/divide_1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_edit"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="@string/design_edit"
            android:background="@color/clear_color"
            android:layout_weight="1"
            android:textColor="@color/common_detail_color"
            android:drawableLeft="@mipmap/edit"
            android:layout_marginRight="20dp"
            android:textSize="15sp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"/>

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="@string/design_delete"
            android:background="@color/clear_color"
            android:textColor="@color/common_detail_color"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/dele"
            android:layout_marginRight="20dp"
            android:textSize="15sp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"/>

        <Button
            android:id="@+id/btn_addCart"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="@string/design_add_cart"
            android:background="@color/clear_color"
            android:textColor="@color/common_detail_color"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/cart"
            android:textSize="15sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/lineview_color"></LinearLayout>

</LinearLayout>
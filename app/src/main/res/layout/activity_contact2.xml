<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ahxbapp.xjjsd.activity.ContactPersonActivity">

    <include layout="@layout/tool_bar_title" />

    <RelativeLayout
        android:id="@+id/mFamilyRL"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/mToolbar"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/education"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="亲属关系"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/mFamilyTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/education"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:textColor="@color/font_grey2"
            android:textSize="15sp" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:src="@mipmap/down" />

    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/mFamilyRL"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/divide_line" />

    <LinearLayout
        android:id="@+id/qsName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/view1"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="亲属姓名"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/qsET"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingLeft="20dp"
            android:textColor="@color/font_grey2"
            android:textColorHint="@color/font_grey2"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@mipmap/go_right" />

    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/qsName"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/divide_line" />

    <LinearLayout
        android:id="@+id/mContactLL"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/view2"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="联系方式"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/mContactET"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:inputType="phone"
            android:maxLines="1"
            android:paddingLeft="20dp"
            android:textColor="@color/font_grey2"
            android:textSize="15sp" />

    </LinearLayout>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/mContactLL"

        android:background="@color/all_bg" />


    <RelativeLayout
        android:id="@+id/mSocialRL"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/view3"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/social"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="社会关系"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/mSocialTV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/social"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:textColor="@color/font_grey2"
            android:textSize="15sp" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:src="@mipmap/down" />

    </RelativeLayout>

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/mSocialRL"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/divide_line" />

    <LinearLayout
        android:id="@+id/shName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/view5"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="联系姓名"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/shET"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingLeft="20dp"
            android:textColor="@color/font_grey2"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@mipmap/go_right" />
    </LinearLayout>

    <View
        android:id="@+id/view6"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/shName"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/divide_line" />

    <LinearLayout
        android:id="@+id/mContactLL1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/view6"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="联系方式"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/mPhoneET"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingLeft="20dp"
            android:textColor="@color/font_grey2"
            android:textSize="15sp" />

    </LinearLayout>

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/mContactLL1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/divide_line" />

    <Button
        android:id="@+id/mSubmitBN"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/view4"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_submit"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="17sp" />

    <LinearLayout
        android:id="@+id/lin_area1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:id="@+id/mView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#66000000"
            android:clickable="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_cancel1"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="取消"
                    android:textColor="@color/nav_blue"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_ok1"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:paddingRight="15dp"
                    android:text="确定"
                    android:textColor="@color/nav_blue"
                    android:textSize="14sp" />
            </LinearLayout>

            <com.ahxbapp.xjjsd.wheel.WheelView
                android:id="@+id/wheel_bank"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

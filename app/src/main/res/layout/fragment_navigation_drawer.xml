<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8ffffff"
    tools:context=".NavigationDrawerFragment_">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/userInfo"
            android:layout_width="match_parent"
            android:background="@color/common_light_color"
            android:layout_height="60dp">

            <RelativeLayout
                android:id="@+id/circleLayout"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="6dp"
                android:background="@mipmap/navigation_user_sharow">

                <com.ahxbapp.common.widget.CircleImageView
                    android:id="@+id/circleIcon"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/ic_default_user" />

            </RelativeLayout>


            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/circleLayout"
                android:text="gravel"
                android:textColor="#ffffff"
                android:textSize="16sp" />
            <ImageView
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/name"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/go_tgwhie"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radio0"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/drawer_selector_bg"

                    android:button="@null"
                    android:drawableLeft="@drawable/drawer_selector_0"
                    android:drawablePadding="15dp"
                    android:paddingEnd="0dp"
                    android:paddingLeft="17dp"
                    android:paddingRight="0dp"
                    android:text="我的消息"
                    android:textColor="@drawable/drawer_selector_font"
                    android:textSize="16sp" />

            </RelativeLayout>

            <RadioButton
                android:id="@+id/radio1"

                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/drawer_selector_bg"
                android:button="@null"

                android:drawableLeft="@drawable/drawer_selector_1"
                android:drawablePadding="15dp"
                android:paddingLeft="17dp"
                android:paddingRight="0dp"
                android:text="我的车辆"
                android:textColor="@drawable/drawer_selector_font"
                android:textSize="16sp" />

            <RadioButton

                android:id="@+id/radio2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/drawer_selector_bg"

                android:button="@null"

                android:drawableLeft="@drawable/drawer_selector_2"
                android:drawablePadding="15dp"
                android:paddingLeft="17dp"
                android:paddingRight="0dp"

                android:text="帮助与反馈"
                android:textColor="@drawable/drawer_selector_font"
                android:textSize="16sp" />
            <RadioButton

                android:id="@+id/radio3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/drawer_selector_bg"

                android:button="@null"

                android:drawableLeft="@drawable/drawer_selector_3"
                android:drawablePadding="15dp"
                android:paddingLeft="17dp"
                android:paddingRight="0dp"

                android:text="设置"
                android:textColor="@drawable/drawer_selector_font"
                android:textSize="16sp" />


        </LinearLayout>

    </LinearLayout>
</ScrollView>
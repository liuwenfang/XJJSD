<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"

    xmlns:android="http://schemas.android.com/apk/res/android" >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/common_nav_bg" >
    </android.support.v7.widget.Toolbar>

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:tools="http://schemas.android.com/tools"

            android:background="@color/white"
            android:layout_marginTop="?attr/actionBarSize">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    >

                    <Button
                        android:id="@+id/btn_safe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/she_safe"
                        android:text="@string/set_accountSafe"
                        android:background="@drawable/fillet_border"
                        android:textColor="@color/person_text"
                        android:drawablePadding="8dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="5dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        />

                    <Button
                        android:id="@+id/btn_clear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/she_clear"
                        android:text="@string/set_clear"
                        android:background="@drawable/fillet_border"
                        android:textColor="@color/person_text"
                        android:drawablePadding="8dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="5dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"/>
                    <Button
                        android:id="@+id/btn_help"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/she_help"
                        android:text="@string/set_help"
                        android:background="@drawable/fillet_border"
                        android:textColor="@color/person_text"
                        android:drawablePadding="8dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="5dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        />
                    <Button
                        android:id="@+id/btn_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/she_share"
                        android:text="@string/set_share"
                        android:background="@drawable/fillet_border"
                        android:textColor="@color/person_text"
                        android:drawablePadding="8dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="5dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/btn_suggest"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTop="@mipmap/she_yijian"
                            android:text="@string/set_suggest"
                            android:background="@drawable/fillet_border"
                            android:textColor="@color/person_text"
                            android:drawablePadding="8dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="5dp"
                            android:layout_weight="1"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="5dp"/>

                        <Button
                            android:id="@+id/btn_about"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTop="@mipmap/she_about"
                            android:text="@string/set_about"
                            android:background="@drawable/fillet_border"
                            android:textColor="@color/person_text"
                            android:drawablePadding="8dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="5dp"
                            android:layout_weight="1"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="5dp"/>
                        <Button
                            android:id="@+id/btn_call"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTop="@mipmap/she_tel"
                            android:text="@string/set_call"
                            android:background="@drawable/fillet_border"
                            android:textColor="@color/person_text"
                            android:drawablePadding="8dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="5dp"
                            android:layout_weight="1"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="5dp"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="horizontal">

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

            <Button
                android:id="@+id/logoutButton"
                style="?android:textAppearanceButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="25dp"
                android:background="@drawable/round_corner_btn"
                android:text="退出账号"
                android:textColor="@drawable/font_login_button"
                android:textSize="18sp"
                android:layout_marginRight="22dp"
                android:layout_marginLeft="22dp" />

    </RelativeLayout>
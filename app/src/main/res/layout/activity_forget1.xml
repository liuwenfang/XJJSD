<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/common_nav_bg" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:text="忘记密码"/>

        </RelativeLayout>


    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/rootScrollView"
        android:layout_marginTop="?attr/actionBarSize"
        android:background="@color/common_back_color"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/layoutRoot"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="0dp"
                        >
                        <LinearLayout  xmlns:custom="http://schemas.android.com/apk/res/com.ahxbapp.xjjsd"
                            android:id="@+id/loginLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@color/white"
                            android:layout_marginTop="10dp"
                            android:visibility="visible">
                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="1dp"
                                android:layout_marginBottom="5dp"
                                android:background="@color/divide_line"/>
                            <com.ahxbapp.common.LoginEditText
                                android:layout_marginRight="22dp"
                                android:layout_marginLeft="22dp"
                                android:id="@+id/editPassword"
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/login_edit"
                                android:hint="@string/login_pass_hit"
                                android:inputType="textPassword"
                                android:maxLines="1"
                                android:drawablePadding="15dp"
                                android:singleLine="true"
                                android:textColor="@color/common_login_text"
                                android:textColorHint="@color/common_login_text_hit"
                                android:textCursorDrawable="@null"
                                android:textSize="16sp"
                                custom:leftIcon="@mipmap/icon_pwd"/>
                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="1dp"
                                android:layout_marginRight="22dp"
                                android:layout_marginLeft="22dp"
                                android:background="@color/divide_line"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">
                                <com.ahxbapp.common.LoginEditText
                                    android:id="@+id/editPassword1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="3dp"
                                    android:background="@drawable/login_edit"
                                    android:drawablePadding="15dp"
                                    android:hint="@string/login_pass_hit1"
                                    android:imeOptions="actionUnspecified"
                                    android:inputType="textPassword"
                                    android:maxLines="1"
                                    android:layout_weight="1"
                                    android:singleLine="true"
                                    android:textColor="@color/common_login_text"
                                    android:textColorHint="@color/common_login_text_hit"
                                    android:textCursorDrawable="@null"
                                    android:textSize="16sp"
                                    custom:leftIcon="@mipmap/icon_pwd"
                                    android:layout_marginRight="22dp"
                                    android:layout_marginLeft="22dp"
                                    custom:dark="true" />
                                <View
                                    android:layout_width="0.7dp"
                                    android:layout_height="15dp"
                                    android:layout_marginTop="6dp"
                                    android:background="@color/divide_line" />

                            </LinearLayout>


                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="1dp"
                                android:background="@color/divide_line"/>
                        </LinearLayout>

                        <Button
                            android:id="@+id/btnConfirm"
                            style="?android:textAppearanceButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="25dp"
                            android:background="@drawable/round_corner_btn"
                            android:textColor="@color/white"
                            android:text="@string/confirm_and_update"
                            android:textSize="18sp"
                            android:layout_marginRight="22dp"
                            android:layout_marginLeft="22dp"   />
                        <RelativeLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <!--<TextView-->
                            <!--android:id="@+id/findPass"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="50dp"-->
                            <!--android:layout_alignParentTop="true"-->
                            <!--android:layout_centerHorizontal="true"-->
                            <!--android:layout_alignParentRight="true"-->
                            <!--android:text="联系客服"-->
                            <!--android:textColor="@color/common_light_color"-->
                            <!--android:gravity="center_vertical"-->
                            <!--android:paddingLeft="10dp"-->
                            <!--android:layout_marginRight="22dp"-->
                            <!--android:textSize="16sp" -->
                            <!--/>-->

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>